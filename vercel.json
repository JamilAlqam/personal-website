{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/send-email",
      "dest": "/api/send-email"
    },
    {
      "src": "/api/test",
      "dest": "/api/test"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
